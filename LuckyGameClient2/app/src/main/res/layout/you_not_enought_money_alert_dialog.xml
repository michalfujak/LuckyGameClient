<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <!-- GetWindow == system drawable.color.glass -->
    <!-- ImageView close button TOP / RIGHT -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:id="@+id/you_not_enought_money_image_view_close"
        android:elevation="5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_alert_dialog_close"
        />
    <!-- Android.View.Card.V7.AlertDialog -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/you_not_enought_money_dialog_background"
        >

    </android.support.v7.widget.CardView>

</RelativeLayout>